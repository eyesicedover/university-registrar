@{
  Layout = "_Layout";
}

<h3>Enter a New Course Below</h3>
<form class="form-group" action="/courses" method="post">
    <label for="courseName">Enter Course Name</label>
    <input type="text" name="courseName" class="form-control">
    <label for="courseNumber">Enter Course Number</label>
    <input type="text" name="courseNumber" class="form-control">
    <label for="professor">Enter Professor Name</label>
    <input type="text" name="professor" class="form-control">
    <button type="submit" name="button"></button>
</form>
